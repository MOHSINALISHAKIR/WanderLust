<% layout('/layouts/boilerplate') -%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WanderLust</title>
  </head>
  <body>
    <h3>Edit Listing:-</h3>
    <form action="/listings/<%= data._id %>?_method=PUT" method="post">

      <input type="text" name="listing[title]" value="<%= data.title %>" />
      <br><br>

      <textarea name="listing[description]"><%= data.description %></textarea>
      <br><br>

      <input type="text" name="listing[image]" value="<%= data.image %>" />
      <br><br>

      <input type="number" name="listing[price]" value="<%= data.price %>" />
      <br><br>

      <input
        type="text"
        name="listing[location]"
        value="<%= data.location %>"
      />
      <br>
      <br>

      <input type="text" name="listing[country]" value="<%= data.country %>" />
       <br><br>

      <button>Add Listing</button>
    </form>
  </body>
</html>
