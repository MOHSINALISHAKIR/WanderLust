<% layout('/layouts/boilerplate') -%>
<body>
  <h1>All Listings :-</h1>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for( list of data) { %>
    <a href="/listings/<%= list._id %>" class="listing-link">
      <div class="card">
        <img
          src="<%= list.image %>"
          class="card-img-top"
          alt="..."
          style="height: 20rem"
        />
        <div class="card-body">
          <p class="card-text">
            <%= list.title %>
            <br />
            Rs : <%= list.price %> pkr
          </p>
        </div>
      </div>
    </a>

    <% } %>
  </div>
</body>
